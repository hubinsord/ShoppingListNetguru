<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:gravity="top"
        android:hint="@string/et_hint_add_name_product"
        android:lines="1" />
    <EditText
        android:id="@+id/et_quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="1234567890"
        android:inputType="textFilter"
        android:layout_marginHorizontal="@dimen/default_margin_horizontal"
        android:gravity="top"
        android:hint="@string/et_hint_add_quantity_product"
        android:lines="1" />

</LinearLayout>